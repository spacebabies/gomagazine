source 'https://rubygems.org'

# rails
gem 'rails', '4.2.5'

# database
gem 'mysql2'

# asset pipeline
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'jquery-rails'
gem 'turbolinks'
gem 'foundation-rails'
gem "autoprefixer-rails"

# gems we need
gem 'slim-rails'
gem 'factory_girl_rails'

group :development do
  gem 'web-console', '~> 2.0'
  gem 'spring'
end

group :test do
  gem 'cucumber-rails', require: false
  gem 'database_cleaner'
  gem 'faker'
end

group :development, :test do
  gem 'rspec-rails'
end
